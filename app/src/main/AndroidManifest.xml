<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinnoocle.fruitindustryoptimization">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mine.AdoptionOrderActivity"></activity>
        <activity android:name=".mine.InvitationPosterActivity" />
        <activity android:name=".mine.ModifyPhoneActivity" />
        <activity android:name=".mine.SettingActivity" />
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".orchard.BigGiftBagActivity" />
        <activity android:name=".orchard.WateringFruitTreesActivity" />
        <activity android:name=".orchard.ECertActivity" />
        <activity android:name=".orchard.ConfirmOrderActivity" />
        <activity android:name=".orchard.AdoptDetailsActivity" />
        <activity android:name=".orchard.AdoptActivity" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity android:name=".home.SearchActivity" />
        <activity
            android:name=".home.VideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
    </application>

</manifest>
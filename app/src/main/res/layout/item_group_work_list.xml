<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_white_6"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="兵团大地 新疆灰枣500g/袋红枣零食小吃休闲食品若羌灰枣正宗特产"
        android:textColor="@color/black_1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:textColor="@color/light_red"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_below="@id/tv_num"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:textColor="@color/light_red"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_goods_pic"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_red_20"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="去拼团"
        android:textColor="@color/white"
        android:textSize="13sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    >

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_1"
        android:textSize="14sp"
        tools:text="兵团大地 新疆灰枣500g/袋红枣零食小吃休闲食品若羌灰枣正宗特产" />

    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:textColor="@color/light_red"
        android:textSize="10sp"
        tools:text="好吃好吃好吃" />

    <TextView
        android:id="@+id/tv_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@id/tv_desc"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        tools:text="已售5件" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sales"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_goods_pic"
        android:textColor="@color/light_red"
        android:textSize="13sp"
        tools:text="￥148.00" />

    <ImageView
        android:id="@+id/iv_add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/add_cart" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_goods_pic"
        android:layout_marginTop="6dp"
        android:background="#ECECEC"/>


</RelativeLayout>
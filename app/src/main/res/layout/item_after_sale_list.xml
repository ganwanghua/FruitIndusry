<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/grey"
            android:textSize="14sp"
            tools:text="2011" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/light_red"
            tools:text="已同意退货，请及时发货" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_below="@id/rl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_shop"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/black_1"
            android:textSize="12sp"
            tools:text="轻熟风垂感先手首要系带翻领双排扣过膝风衣外套女" />

        <TextView
            android:id="@+id/tv_goods_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_shop"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            tools:text="杏色；xs" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_pattern"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品金额："
                android:textColor="@color/black_1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF303F"
                android:textSize="12sp"
                tools:text="￥188.32" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单实付金额："
                android:textColor="@color/black_1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF303F"
                android:textSize="12sp"
                tools:text="￥188.32" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="15sp"
            tools:text="X1件" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_below="@id/view"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_grey_1_stroke"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="查看详情"
        android:textColor="@color/text_color"
        android:textSize="11sp" />
</RelativeLayout>